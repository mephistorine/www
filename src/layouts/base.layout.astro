---
import "../global.css";

import DumpLayout from "./dump.layout.astro";
import Footer from "../components/footer.svelte";
import Header from "../components/header.svelte";
import type { Breadcrumb } from "../models";

interface Props {
  breadcrumbs: readonly Breadcrumb[];
  title: string;
  enableWrap?: boolean;
  description?: string
}

const { breadcrumbs, title, description = "", enableWrap = true } = Astro.props as Props;
---

<DumpLayout title={title} description={description}>
  <Header breadcrumbs={breadcrumbs} />
    <main class:list={{ wrap: enableWrap }} class="py-4">
      <slot />
    </main>
    <Footer />
</DumpLayout>